CREATE TABLE Motoristas (
    CodigoMotorista INT PRIMARY KEY,
    Nome VARCHAR(100),
    Telefone VARCHAR(20),
    Endereco VARCHAR(255)
);

CREATE TABLE Veiculos (
    PlacaCarro VARCHAR(10) PRIMARY KEY,
    Modelo VARCHAR(50),
    Marca VARCHAR(50),
    Ano INT,
    CodigoMotorista INT,
    FOREIGN KEY (CodigoMotorista) REFERENCES Motoristas(CodigoMotorista)
);

CREATE TABLE Combustivel (
    IdGasto INT PRIMARY KEY AUTO_INCREMENT,
    PlacaCarro VARCHAR(10),
    Data DATE,
    QuantidadeLitros DECIMAL(5,2),
    Valor DECIMAL(10,2),
    FOREIGN KEY (PlacaCarro) REFERENCES Veiculos(PlacaCarro)
);

CREATE TABLE Manutencao (
    IdManutencao INT PRIMARY KEY AUTO_INCREMENT,
    PlacaCarro VARCHAR(10),
    Data DATE,
    Descricao TEXT,
    Custo DECIMAL(10,2),
    FOREIGN KEY (PlacaCarro) REFERENCES Veiculos(PlacaCarro)
);

CREATE TABLE Multas (
    IdMulta INT PRIMARY KEY AUTO_INCREMENT,
    PlacaCarro VARCHAR(10),
    Data DATE,
    Tipo VARCHAR(100),
    Valor DECIMAL(10,2),
    FOREIGN KEY (PlacaCarro) REFERENCES Veiculos(PlacaCarro)
);

CREATE TABLE Rodagem (
    IdRodagem INT PRIMARY KEY AUTO_INCREMENT,
    PlacaCarro VARCHAR(10),
    Data DATE,
    Quilometragem DECIMAL(10,2),
    FOREIGN KEY (PlacaCarro) REFERENCES Veiculos(PlacaCarro)
);

CREATE TABLE TempoUso (
    IdTempoUso INT PRIMARY KEY AUTO_INCREMENT,
    PlacaCarro VARCHAR(10),
    Data DATE,
    HorasUso DECIMAL(5,2),
    FOREIGN KEY (PlacaCarro) REFERENCES Veiculos(PlacaCarro)
);
